        "@popperjs/core": "^2.5.4",
        "@yaireo/tagify": "^3.20.0",
        "algoliasearch": "^4.8.5",
        "autocomplete.js": "^0.38.0",
        "axios": "^0.21.1",
        "bootstrap": "^5.0.0",
        "cross-env": "^7.0",
        "laravel-mix": "^6.0.11",
        "lodash": "^4.17.20",
        "purgecss": "^4.0.3",
        "resolve-url-loader": "^3.1.2",
        "sass": "^1.29.0",
        "sass-loader": "^8.0.0",
        "sweetalert2": "^9.17.2",
        "vue": "^2.6.12",
        "vue-template-compiler": "^2.6.12"
